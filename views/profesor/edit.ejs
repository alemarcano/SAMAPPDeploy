<div class="d-flex align-items-center justify-content-center w-100 h-100">
    <div class="text-center white-text my-auto align-middle">
        <div>
          <h3 class="p-3 mb-2"> Editar un Profesor:</h3>

          <form action="<%= '/editProfesor/?id='+ profesor.idProfesor %>" method="POST">
            <table class="table">
              <tr>
                <th>Especialidad:</th>
                <td><input class="form-control"  type="text" name="especialidad" required value="<%= profesor.especialidad %>"></td>
              </tr>
              <tr>
                <th>Persona:</th>
                <td>
                  <select name="persona" class="form-control">
                      <option value="<%= profesor.persona.idPersona %>" selected> <%= profesor.persona.nombres + ' ' + profesor.persona.apellidos %> </option>
                    <% personas.forEach(function(persona){ %>
                      <option value="<%= persona.idPersona %>" > <%= persona.Nombres + ' ' + persona.Apellidos %> </option>
                    <% }) %>
                  </select>
                </td>
              </tr>
              <tr>
                <th>Departamento</th>
                <td>
                  <select name="isEstructura" class="form-control">
                      <% departamentos.forEach(function(departamento){ %>
                        <option value="<%= departamento.idEstructura %>" <%if(departamento.idEstructura == profesor.isEstructura){ %> selected <% } %> > <%= departamento.nombre %> </option>
                      <% }) %>
                  </select>
                </td>
              </tr>
              <tr>
                <td  colspan="6"> <input class="btn btn-success w-50" type="submit" value="Submit"> </td>
              </tr>
            </table>
          </div>
        </form>
      </div>
  </div>
